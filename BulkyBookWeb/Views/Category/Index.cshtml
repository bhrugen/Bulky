@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-right"> <i class="bi bi-plus-circle"></i> &nbsp; Create New</a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th style="width:20%">Display Order</th>
            <th style="width:30%"></th>
        </tr>
    </thead>
    <tbody>
        @{ foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2 "><i class="bi bi-pencil"></i>&nbsp;Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 "><i class="bi bi-trash"></i>&nbsp;Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>